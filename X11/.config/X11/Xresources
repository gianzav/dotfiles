!font 
*.font: xft:Code New Roman:style=Regular:size=16:antialias=true, xft:Noto Color Emoji:stle=Regular
*.boldFont: xft:Code New Roman:style=Bold:size=16:antialias=true
*.italicFont: xft:Code New Roman:style=Italic:size=16:antialias=true
*.boldItalicFont: xft:Code New Roman:style=Bold Italic:size=16:antialias=true

!keeping the same font size on all screens
Xft.dpi:96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!depth for custom opacity
!URxvt.depth: 32

!URxvt.geometry: 123x34 
! special
URxvt.foreground:   #d0d0d0
URxvt.background:   #3f3f3f
!URxvt.cursorColor:  

! black
URxvt.color0:      #4e4e4e 
URxvt.color8:      #626262

! red
URxvt.color1:      #d68787
URxvt.color9:      #d75f87

! green
URxvt.color2:      #5f865f
URxvt.color10:     #87af87

! yellow
URxvt.color3:      #d8af5f
URxvt.color11:     #ffd787

! blue
URxvt.color4:      #85add4
URxvt.color12:     #add4fb

! magenta
URxvt.color5:      #d7afaf
URxvt.color13:     #ffafaf

! cyan
URxvt.color6:      #87afaf
URxvt.color14:     #87d7d7

! white
URxvt.color7:      #d0d0d0
URxvt.color15:     #e4e4e4

! color for bold, italics, underline
!URxvt.colorIT:      #08a65c 
!URxvt.colorBD:      #f205e2
!URxvt.colorUL:      #01F2D2
!disabling the scrollbar on edges
URxvt.scrollBar:False

!changing the color of the border
!URxvt.borderColor: #256789

URxvt.externalBorder:0
URxvt.internalBorder:15

!tabs support, resize font in terminal
!URxvt.perl-ext-common: tabbedex
!resize-font

!Default keybindings for resize-font
!URxvt.keysym.C-minus:     resize-font:smaller
!URxvt.keysym.C-plus:      resize-font:bigger
!URxvt.keysym.C-equal:     resize-font:reset
!URxvt.keysym.C-question:  resize-font:show

!changing tabs color
!URxvt.tabbedex.tabbar-fg: 2
!URxvt.tabbedex.tabbar-bg: 0
!URxvt.tabbedex.tab-fg: 3
!URxvt.tabbedex.tab-bg: 0

!keybindings for tabs movement
!URxvt.keysym.Control-t: perl:tabbedex:new_tab
!URxvt.keysym.Shift-Right: perl:tabbedex:next_tab
!URxvt.keysym.Shift-Left: perl:tabbedex:prev_tab
!URxvt.keysym.Control-Left: perl:tabbedex:move_tab_left
!URxvt.keysym.Control-Right: perl:tabbedex:move_tab_right
!URxvt.keysym.Shift-Up: perl:tabbedex:rename_tab
